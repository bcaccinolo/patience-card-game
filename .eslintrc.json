{
  "parser": "babel-eslint",
  "extends": "standard",
  "parserOptions": {
    "ecmaVersion": 6,
    "sourceType": "module"
  },
  "env": {
    "browser": true,
    "mocha": true
  },
  "rules": {
    "import/no-unresolved": [2],
    "space-before-function-paren": ["error", "never"],
    "indent": ["error", 4]
  },
  "globals": {
    "phaser": true
  },
  "settings": {
    "import/core-modules": [ "phaser", "pixi", "p2" ]
  }
}
